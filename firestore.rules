rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== SALONLAR ====================
    match /salons/{salonId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true; // Süper admin silme yetkisi
      
      // Salon altındaki personeller
      match /staff/{staffId} {
        allow read, write: if true;
      }
      
      // Salon altındaki hizmetler
      match /services/{serviceId} {
        allow read, write: if true;
      }
      
      // Salon altındaki randevular
      match /appointments/{appointmentId} {
        allow read, write: if true;
        allow delete: if true;
      }
      
      // Salon altındaki müşteriler
      match /customers/{customerId} {
        allow read, write: if true;
        allow delete: if true;
      }
      
      // Personel blokları (izin/kapalı günler)
      match /staffBlocks/{blockId} {
        allow read, write: if true;
      }
      
      // Müşteri notları
      match /customerNotes/{noteId} {
        allow read, write: if true;
      }
      
      // Silinen müşteriler (blacklist)
      match /deletedCustomers/{customerId} {
        allow read, write: if true;
      }
      
      // Salon altındaki yorumlar
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if true; // Admin düzenleme yetkisi
      }
    }
    
    // ==================== RANDEVULAR (global) ====================
    match /appointments/{appointmentId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true; // Süper admin silme yetkisi
    }
    
    // ==================== MÜŞTERİLER ====================
    match /customers/{customerId} {
      allow read, write: if true;
      allow delete: if true;
    }
    
    // ==================== ADMIN ====================
    match /admin/{docId} {
      allow read, write: if true;
    }
    
    // ==================== SİSTEM AYARLARI ====================
    match /settings/{docId} {
      allow read: if true;
      allow write: if true;
    }
    
    // ==================== PUSH TOKENS ====================
    match /push_tokens/{tokenId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if true;
    }
    
    // ==================== BİLDİRİMLER ====================
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    match /notification_logs/{logId} {
      allow read, write: if true;
    }
    
    // ==================== ADMIN LOGLARI ====================
    match /admin_logs/{logId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
  }
}
