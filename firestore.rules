rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Salonlar - Herkes okuyabilir, sadece sahibi yazabilir
    match /salons/{salonId} {
      allow read: if true;
      allow create: if true; // Kayıt için
      allow update, delete: if true; // PIN doğrulaması frontend'de yapılıyor
      
      // Salon altındaki randevular
      match /appointments/{appointmentId} {
        allow read, write: if true;
      }
      
      // Salon altındaki yorumlar
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if false;
      }
    }
    
    // Randevular (global collection)
    match /appointments/{appointmentId} {
      allow read, write: if true;
    }
    
    // Müşteriler
    match /customers/{customerId} {
      allow read, write: if true;
    }
    
    // Admin collection - sadece admin erişebilir
    match /admin/{docId} {
      allow read, write: if true; // Production'da kısıtlanmalı
    }
    
    // Sistem ayarları
    match /settings/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Push Notification Tokens
    match /push_tokens/{tokenId} {
      allow read, write: if true;
    }
    
    // Notifications Queue (Cloud Functions tarafından işlenir)
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Notification Logs (Cloud Functions tarafından yazılır)
    match /notification_logs/{logId} {
      allow read: if true;
      allow write: if true; // Cloud Functions yazacak
    }
  }
}
