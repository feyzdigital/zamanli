rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Salonlar - Herkes okuyabilir, yazma için kısıtlama
    match /salons/{salonId} {
      allow read: if true;
      allow create: if true; // Kayıt için
      allow update: if true; // PIN doğrulaması frontend'de yapılıyor
      allow delete: if false; // Silme devre dışı - güvenlik için
      
      // Salon altındaki personeller
      match /staff/{staffId} {
        allow read, write: if true;
      }
      
      // Salon altındaki hizmetler
      match /services/{serviceId} {
        allow read, write: if true;
      }
      
      // Salon altındaki randevular
      match /appointments/{appointmentId} {
        allow read, write: if true;
      }
      
      // Salon altındaki müşteriler
      match /customers/{customerId} {
        allow read, write: if true;
      }
      
      // Personel blokları (izin/kapalı günler)
      match /staffBlocks/{blockId} {
        allow read, write: if true;
      }
      
      // Müşteri notları
      match /customerNotes/{noteId} {
        allow read, write: if true;
      }
      
      // Salon altındaki yorumlar
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if false;
      }
    }
    
    // Randevular (global collection)
    match /appointments/{appointmentId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false; // Silme yerine iptal durumu kullan
    }
    
    // Müşteriler
    match /customers/{customerId} {
      allow read, write: if true;
    }
    
    // Admin collection - sadece admin erişebilir
    match /admin/{docId} {
      allow read, write: if true; // Production'da kısıtlanmalı
    }
    
    // Sistem ayarları
    match /settings/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Push Notification Tokens
    match /push_tokens/{tokenId} {
      allow read: if false; // Sadece cloud functions erişebilir
      allow create, update: if true; // Token kaydı için
      allow delete: if false;
    }
    
    // Notifications Queue (Cloud Functions tarafından işlenir)
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Notification Logs (Cloud Functions tarafından yazılır)
    match /notification_logs/{logId} {
      allow read: if true;
      allow write: if true; // Cloud Functions yazacak
    }
  }
}
